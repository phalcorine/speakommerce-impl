{% extends 'admin/layouts/_base.html.twig' %}

{% block title %} {{ pageTitle }} {% endblock %}

{% block body %}

    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-text-width"></i>
                    {{ pageTitle }}
                </h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <blockquote>
                    <p>Please fill in the details below.</p>
                    {#<small>Someone famous in <cite title="Source Title">Source Title</cite></small>#}
                </blockquote>

                {# Content (Form) #}
                <section class="content">
                    <div class="container-fluid">

                        <div class="col-md-12">
                            <!-- general form elements -->
                            <div class="card card-primary">
                                {#<div class="card-header">
                                <h3 class="card-title">Quick Example</h3>
                            </div>#}
                                <!-- /.card-header -->
                                <!-- form start -->
                                <form role="form" action="{{ path('admin.orders.change_status', { token: order.token }) }}" method="post" enctype="multipart/form-data">
                                    <div class="card-body">
                                        <div class="form-group">
                                            <label for="order-status">Order Status: </label>
                                            <select class="form-control" id="order-status" name="order_status" required>
                                                {% for status in orderStatuses %}
                                                    <option value="{{ status }}"
                                                            {% if order.status == status %}
                                                                selected
                                                            {% endif %}
                                                    >
                                                        {{ status }}
                                                    </option>
                                                {% endfor %}
                                            </select>
                                        </div>

                                        <div class="form-check">
                                            <input type="checkbox" class="form-check-input" id="termsCheck" required>
                                            <label class="form-check-label" for="termsCheck">I am okay with the details above :).</label>
                                        </div>
                                    </div>
                                    <!-- /.card-body -->

                                    <div class="card-footer">
                                        <button type="submit" class="btn btn-primary">Save</button>
                                        <button type="reset" class="btn btn-primary">Reset</button>
                                    </div>
                                </form>
                            </div>
                            <!-- /.card -->
                        </div>

                    </div>
                </section>

            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>

{% endblock %}
