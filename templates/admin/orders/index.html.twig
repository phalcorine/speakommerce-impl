{% extends 'admin/layouts/_base.html.twig' %}

{% block title %} {{ pageTitle }} {% endblock %}

{% block body %}

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">

            {# Course Categories #}
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">List: Product Orders</h3>

                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table class="table table-bordered">
                            <thead>
                            <tr>
                                <th style="width: 10px">#</th>
                                <th>Order No.</th>
                                <th>Customer Name</th>
                                <th>Number of Groceries Purchased</th>
                                <th>Total Cost (£)</th>
                                <th style="width: 40px">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% set indexer = 1 %}
                            {% for order in orders %}
                                <tr>
                                    <td>{{ indexer ~ '.' }}</td>
                                    <td>{{ order.token }}</td>
                                    <td>{{ order.customerName }}</td>
                                    <td>{{ order.orderItems|length }}</td>
                                    <td>{{ '£' ~ order.totalPrice|number_format }}</td>
                                    <td>
                                        <a class="btn border-dark " href="{{ path('admin.orders.details', { token: order.token }) }}">
                                            <span class="badge bg-primary">Details</span>
                                            <span class="fa fa-eye"></span>
                                        </a>

                                    </td>
                                    {% set indexer = indexer + 1 %}
                                </tr>
                            {% else %}

                                <div align="center" class="align-content-center">
                                    <p> We have no recent orders...
                                        <span class="fa fa-sad-tear"></span>
                                    </p>
                                </div>

                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                    {#<div class="card-footer clearfix">
                        <ul class="pagination pagination-sm m-0 float-right">
                            <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
                        </ul>
                    </div>#}
                </div>
                <!-- /.card -->
            </div>

        </div>
    </section>

{% endblock %}