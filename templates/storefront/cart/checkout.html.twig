{% extends 'storefront/layouts/_base.html.twig' %}

{% block title %}
    {{ pageTitle }}
{% endblock %}

{% block content %}

    <section class="page-header">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="content">
                        <h1 class="page-name">Checkout</h1>
                        <ol class="breadcrumb">
                            <li><a href="{{ path('app.home.index') }}">Home</a></li>
                            <li class="active">Checkout</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="page-wrapper">
        {% include 'admin/partials/shared/header/_alerts.html.twig' %}
        <div class="checkout shopping">
            <div class="container">
                <div class="row">
                    <div class="col-md-8">
                        <form class="checkout-form" method="post" action="{{ path('app.cart.checkout') }}">
                        <div class="block billing-details">
                            <h4 class="widget-title">Billing Details</h4>
                                <div class="form-group">
                                    <label for="full_name">Full Name</label>
                                    <input type="text" class="form-control" id="full_name" required
                                           name="full_name" placeholder="" value="{{ formDto.fullName }}" />
                                </div>
                                <div class="form-group">
                                    <label for="user_address">Address</label>
                                    <input type="text" class="form-control" id="user_address" name="address" required
                                           placeholder="" value="{{ formDto.address }}" />
                                </div>
                                <div class="checkout-country-code clearfix">
                                    <div class="form-group">
                                        <label for="user_post_code">Zip Code</label>
                                        <input type="text" class="form-control" id="user_post_code" name="zip_code" required
                                               value="{{ formDto.zipCode }}" />
                                    </div>
                                    <div class="form-group" >
                                        <label for="user_city">City</label>
                                        <input type="text" class="form-control" id="user_city" name="city" required
                                               value="{{ formDto.city }}" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="user_country">Country</label>
                                    <input type="text" class="form-control" id="user_country" name="country" required
                                           placeholder="" value="{{ formDto.country }}" />
                                </div>
                        </div>
                        <div class="block">
                            <h4 class="widget-title">Payment Method</h4>
                            <p>Credit Cart Details (Secure payment)</p>
                            <div class="checkout-product-details">
                                <div class="payment">
                                    <div class="card-details">
                                            <div class="form-group">
                                                <label for="card-number">Card Number <span class="required">*</span></label>
                                                <input id="card-number" class="form-control" type="tel" name="card_number" required
                                                       placeholder="•••• •••• •••• ••••" value="{{ formDto.cardNumber }}"
                                                />
                                            </div>
                                            <div class="form-group half-width padding-right">
                                                <label for="card-expiry">Expiry (MM/YY) <span class="required">*</span></label>
                                                <input id="card-expiry" class="form-control" type="tel" name="card_expiry_date" required
                                                       placeholder="MM / YY" value="{{ formDto.cardExpiryDate }}" />
                                            </div>
                                            <div class="form-group half-width padding-left">
                                                <label for="card-cvc">Card Code <span class="required">*</span></label>
                                                <input id="card-cvc" class="form-control" type="tel" maxlength="4" name="card_code" required
                                                       placeholder="CVC" value="{{ formDto.cardCode }}" />
                                            </div>
                                            <button type="submit" class="btn btn-main mt-20">Place Order</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        </form>
                    </div>
                    <div class="col-md-4">
                        {{ component('checkout_order_summary') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="coupon-modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <input class="form-control" type="text" placeholder="Enter Coupon Code">
                        </div>
                        <button type="submit" class="btn btn-main">Apply Coupon</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


{% endblock %}