{# componennts/navbar_product_category_list.html.twig #}

<li class="dropdown dropdown-slide">
    <a href="#!" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="350"
       role="button" aria-haspopup="true" aria-expanded="false">Categories<span
                class="tf-ion-ios-arrow-down"></span></a>
    <ul class="dropdown-menu">
        {% for category in computed.categories %}
            <li><a href="{{ path('app.categories.details', { slug: category.slug }) }}">{{ category.name }}</a></li>
        {% endfor %}
    </ul>
</li>